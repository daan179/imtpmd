<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solutions.guidedrecovery.ecapp.Activities.Richting_Activity"
    tools:showIn="@layout/activity_richting_">



    <Button
        android:id="@+id/button_MT"
        android:background="@drawable/roundbuttons"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Media technology"
        app:layout_constraintRight_toLeftOf="@+id/button_BIT"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button_SE"
        android:background="@drawable/roundbuttons"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Software development"
        app:layout_constraintRight_toLeftOf="@+id/button_FICT"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_MT"
        app:layout_constraintVertical_bias="0.214"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button_FICT"
        android:background="@drawable/roundbuttons"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:text="Forensisch ICT"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_SE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_BIT"
        app:layout_constraintVertical_bias="0.214"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button_BIT"
        android:background="@drawable/roundbuttons"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="business IT "

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_MT"
        android:layout_marginRight="8dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:text="Kies een studierighting"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
