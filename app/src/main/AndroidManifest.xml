<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solutions.guidedrecovery.ecapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ecicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ecicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Propedeuse_Activity"
            android:label="@string/title_activity_propedeuse_"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.About_Activity"
            android:label="@string/title_activity_about_"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.HoofdFase_Activity"
            android:label="@string/title_activity_hoofd_fase_"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.Richting_Activity"
            android:label="@string/title_activity_richting_"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.MTActivity" />
        <activity
            android:name=".Activities.EC_results"
            android:label="@string/title_activity_ec_results"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>